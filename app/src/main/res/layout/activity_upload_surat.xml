<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.UploadSuratActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:translationZ="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tollbar"
        android:backgroundTint="@color/purple_500"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_right"
                android:rotation="180"
                android:layout_marginLeft="10dp"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Surat"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/title"
                android:layout_marginLeft="@dimen/_105sdp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:text="Upload Laporan Pengujian"
        android:layout_gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_reguler"
        android:text="Setelah Menyetujui pengujian, Silahkan Upload Laporan Pengujian"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"/>
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:id="@+id/uploadSurat"
        android:background="@drawable/main_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Laporan"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/fileTxt"/>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:id="@+id/noreg"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutTotal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/botom_shape"
        android:layout_alignParentBottom="true"
        android:translationZ="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/main_shape"
            android:layout_alignParentRight="true"
            android:id="@+id/lanjutBayar"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lanjut >"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_12sdp"/>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>